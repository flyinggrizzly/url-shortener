<% provide(:title, 'Short URLs') %>

<h1>All Short URLs</h1>

<%= render 'short_urls/create_button' %>

<div>
  <%= render partial: 'shared/url_search_form' %>
</div>

<section class="short_urls column">
  <%= will_paginate class: 'text-center pagination' %>
  <ul>
    <% @short_urls.each do |short_url| %>
      <%= render partial: short_url, short_url: short_url %>
    <% end %>
  </ul>
  <%= will_paginate class: 'text-center pagination' %>
</section>
